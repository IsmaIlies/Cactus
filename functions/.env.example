# Example .env for Cloud Functions (local/dev)
# Copy to functions/.env and adjust values. For production, prefer Firebase env or Secret Manager.

# Enforce the IP allowlist ('true' blocks disallowed IPs, 'false' only logs)
AUTH_IP_ENFORCE=false

# Comma/space-separated list of IPs and CIDRs allowed to sign in or create accounts
# Examples:
#  - Single IP (IPv4): 203.0.113.4
#  - CIDR (IPv4):      198.51.100.0/24
#  - IPv6 / CIDR:      2001:db8::/32
AUTH_IP_ALLOWLIST="77.72.95.93/32,77.72.95.94/32,95.143.79.26/32,185.17.240.132/32"

# Optional: emails allowed to bypass IP restriction (comma/space separated)
AUTH_IP_BYPASS_EMAILS="admin@mars-marketing.fr admin@orange.mars-marketing.fr"
