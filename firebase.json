{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.{js,css,json}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.{webp,png,jpg,jpeg,gif,svg}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.{woff2,woff,ttf,eot}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/ip-check",
        "function": "authIpCheckV1",
        "region": "us-central1"
      },
      {
        "source": "/api/justwatch",
        "function": "justwatchProxy",
        "region": "europe-west9"
      },
      {
        "source": "/api/update-email",
        "function": "updatePrimaryEmailIfMicrosoftLinkedHttp",
        "region": "europe-west9"
      },
      {
        "source": "/api/leads-stats-forward",
        "function": "leadsStatsForward",
        "region": "europe-west1"
      },
      {
        "source": "/api/leads-stats",
        "function": "leadsStats",
        "region": "europe-west1"
      },
      {
        "source": "/api/request-password-reset",
        "function": "requestPasswordReset",
        "region": "europe-west9"
      },
      {
        "source": "/auth/action",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": { "host": "127.0.0.1", "port": 9099 },
    "functions": { "host": "127.0.0.1", "port": 5001 },
    "firestore": { "host": "127.0.0.1", "port": 8080 },
    "hosting": { "host": "127.0.0.1", "port": 5000 },
    "storage": { "host": "127.0.0.1", "port": 9199 },
    "ui": { "enabled": true, "host": "127.0.0.1", "port": 4000 },
    "singleProjectMode": true
  }
}
