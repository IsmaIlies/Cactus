{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "assets/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.{js,css,json}",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.{webp,png,jpg,jpeg,gif,svg}",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.{woff2,woff,ttf,eot}",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "rewrites": [
      {
      "source": "/api/justwatch",
      "function": "justwatchProxy",
      "functionRegion": "europe-west9"
      },
      {
        "source": "/api/update-email",
        "function": "updatePrimaryEmailIfMicrosoftLinkedHttp",
        "functionRegion": "europe-west9"
      },
      {
        "source": "/api/leads-stats-forward",
        "function": "leadsStatsForward",
        "functionRegion": "europe-west1"
      },
      {
        "source": "/api/leads-stats",
        "function": "leadsStats",
        "functionRegion": "europe-west1"
      },
      {
        "source": "/auth/action",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
